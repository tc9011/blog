---
import '@docsearch/css'
---

<div id="docsearch" class="contents"></div>

<script>
import docsearch from '@docsearch/js'

docsearch({
  container: '#docsearch',
  appId: import.meta.env.PUBLIC_DOC_SEARCH_APP_ID || '',
  indexName: import.meta.env.PUBLIC_DOC_SEARCH_INDEX_NAME || '',
  apiKey: import.meta.env.PUBLIC_DOC_SEARCH_API_KEY || '',
  placeholder: '搜索网站内容',
  translations: {
    button: {
      buttonText: '搜索',
      buttonAriaLabel: '搜索',
    },
    modal: {
      searchBox: {
        resetButtonTitle: '清除查询条件',
        resetButtonAriaLabel: '清除查询条件',
        cancelButtonText: '取消',
        cancelButtonAriaLabel: '取消',
      },
      startScreen: {
        recentSearchesTitle: '最近搜索',
        noRecentSearchesText: '没有最近的搜索记录',
        saveRecentSearchButtonTitle: '保存到最近的搜索记录',
        removeRecentSearchButtonTitle: '从最近的搜索记录中删除',
        favoriteSearchesTitle: '收藏的搜索记录',
        removeFavoriteSearchButtonTitle: '从收藏的搜索记录中删除',
      },
      errorScreen: {
        titleText: '无法获取结果',
        helpText:
            '你可能需要检查你的网络连接，或者尝试更改你的查询条件。',
      },
    },
  },
})
</script>

<style>
  div[data-open-modal] {
    width: 100%;
  }

  @media (min-width: 50rem) {
    :global(.DocSearch-Button) {
      width: 100%;
      max-width: 20rem;
    }
  }
</style>
